{
  "name": "ebsi 자막 크기 자유 조절",
  "description": "ebsi 강의의 자막 크기를 자유롭게 조절하게 해줍니다",
  "version": "1.0.6",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://www.ebsi.co.kr/ebs/lms/player/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
